        // Gestionnaire pour le bouton de d√©monstration
        demoBtn.addEventListener('click', async () => {
            loading.style.display = 'block';
            result.style.display = 'none';
            demoBtn.disabled = true;
            demoBtn.textContent = 'üß™ Chargement de l\'exemple...';

            try {
                const response = await fetch('/api/keepa-roi/demo');
                const data = await response.json();

                if (response.ok && data.success) {
                    // Utiliser les m√™mes variables que pour un vrai r√©sultat
                    const prixTTC = data.prixTTC.toFixed(2);
                    const roi = data.roi;
                    const product = data.product;
                    const prix = data.prix;
                    const ventes = data.ventes;

                    let roiSection = '';
                    if (roi && Object.keys(roi).length > 0) {
                        const roiClass = roi.roiPourcentage > 0 ? 'roi-value' : 'roi-value roi-negative';
                        const rentabiliteIcon = roi.rentable ? '‚úÖ' : '‚ùå';
                        const rentabiliteText = roi.rentable ? 'Rentable' : 'Non rentable';
                        
                        roiSection = `
                            <div class="roi-section">
                                <h4>${rentabiliteIcon} Analyse de rentabilit√© - D√âMONSTRATION</h4>
                                <div style="background: #fff3cd; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
                                    <strong>üß™ Donn√©es de d√©monstration</strong><br>
                                    <em>Cet exemple montre le calcul d√©taill√© des frais FBA et de port bas√© sur les dimensions r√©elles d'un produit.</em>
                                </div>
                                <div class="sales-info">
                                    <span class="sales-label">ROI Net HT :</span>
                                    <span class="${roiClass}">${roi.roiPourcentageHT?.toFixed(2) || roi.roiPourcentage?.toFixed(2) || 'N/A'}%</span>
                                </div>
                                <div class="sales-info">
                                    <span class="sales-label">Prix vente TTC :</span>
                                    <span class="sales-value">${roi.prixVenteTTC?.toFixed(2) || roi.prixVente?.toFixed(2) || 'N/A'}‚Ç¨</span>
                                </div>
                                <div class="sales-info">
                                    <span class="sales-label">Prix vente HT :</span>
                                    <span class="sales-value">${roi.prixVenteHT?.toFixed(2) || 'N/A'}‚Ç¨</span>
                                </div>
                                <div class="sales-info">
                                    <span class="sales-label">Prix achat HT :</span>
                                    <span class="sales-value">${roi.prixAchatHT?.toFixed(2) || 'N/A'}‚Ç¨</span>
                                </div>
                                <div class="sales-info">
                                    <span class="sales-label">Frais Amazon HT :</span>
                                    <span class="sales-value">${roi.fraisHT?.amazon?.toFixed(2) || roi.frais?.amazon?.toFixed(2) || 'N/A'}‚Ç¨</span>
                                </div>
                                <div class="sales-info">
                                    <span class="sales-label">Frais FBA HT :</span>
                                    <span class="sales-value">${roi.fraisHT?.fba?.toFixed(2) || roi.frais?.fba?.toFixed(2) || 'N/A'}‚Ç¨</span>
