                    if (roi && Object.keys(roi).length > 0) {
                        const roiClass = roi.roiPourcentage > 0 ? 'roi-value' : 'roi-value roi-negative';
                        const rentabiliteIcon = roi.rentable ? '‚úÖ' : '‚ùå';
                        const rentabiliteText = roi.rentable ? 'Rentable' : 'Non rentable';
                        
                        roiSection = `
